<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Admin.AdminMaintainProductsActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/product_item_image_edit_admin"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/foodddandrestaurant"
                />
            <EditText
                android:id="@+id/product_item_name_edit_admin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="أسم المنتج"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginTop="7dp"
                android:textDirection="rtl"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold"
                android:background="@drawable/input_design"
                />

            <EditText
                android:id="@+id/product_item_price_edit_admin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="سعر المنتج"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="2dp"
                android:textStyle="bold"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:background="@drawable/input_design"
                android:textColor="#4CAF50"
                android:layout_marginTop="7dp"
                />
            <EditText
                android:id="@+id/product_item_disc_edit_admin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="7dp"
                android:maxLength="23"
                android:layout_gravity="center"
                android:textDirection="rtl"
                android:hint="تفاصيل المنتج بحد اقصى 23 حرف"
                android:background="@drawable/input_design"
                android:textSize="16sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/apllay_changes_admin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:textDirection="rtl"
        android:text="تثبيت التغيرات"
        android:background="@drawable/buttons"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/delete_product_admin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="7dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textDirection="rtl"
        android:text="مسح المنتج"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttons"
        android:textSize="16sp"/>
</LinearLayout>