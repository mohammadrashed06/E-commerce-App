<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:id="@+id/stats"
    app:cardElevation="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="  #dedfda "      >
       <TextView
           android:id="@+id/textViewOptions"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="&#8942;"
           android:textSize="25sp"
           android:textStyle="bold"
           android:textColor="#000000"
           android:textAppearance="?android:textAppearanceLarge"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="10dp"

           />

       <TextView
           android:id="@+id/cart_product_description"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="مربى الدرة بنكهة المشمش"
           android:textColor="#000000"
           android:textDirection="rtl"
           android:textSize="18sp"
           android:textStyle="bold"
          android:layout_centerInParent="true"
           android:layout_alignParentTop="true"
           android:layout_marginEnd="25dp"
           android:layout_marginTop="10dp"
           >
       </TextView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="الكمية"
           android:textSize="18sp"
           android:textDirection="rtl"
           android:textColor="#000000"
           android:id="@+id/quntitiy"
           android:layout_alignParentEnd="true"
           android:layout_below="@+id/cart_product_description"
           android:layout_marginEnd="25dp"
           android:layout_marginTop="3dp">
       </TextView>
       <TextView
           android:id="@+id/cart_quntitiy_number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="5"
           android:textSize="18sp"
           android:textColor="#000000"
           android:layout_below="@id/cart_product_description"
           android:layout_alignParentStart="true"
           android:layout_marginTop="3dp"
           android:layout_marginStart="25dp"

           >
       </TextView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="السعر"
           android:textSize="18sp"
           android:textDirection="rtl"
           android:textColor="#000000"
           android:id="@+id/price"
           android:layout_alignParentEnd="true"
           android:layout_below="@+id/cart_quntitiy_number"
           android:layout_marginEnd="25dp"
           android:layout_marginTop="3dp">
       </TextView>
       <TextView
           android:id="@+id/cart_product_price"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="3.99 د.أ"
           android:textDirection="rtl"
           android:textSize="18sp"
           android:textColor="#4CAF50"
           android:layout_alignParentStart="true"
           android:layout_below="@id/quntitiy"
           android:layout_marginStart="16dp"
           android:layout_marginTop="3dp"
           />

   </RelativeLayout>
</androidx.cardview.widget.CardView>

