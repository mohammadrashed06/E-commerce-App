<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestPasswordActivity">

    <RelativeLayout
        android:id="@+id/myrelative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">
        
        <TextView
            android:id="@+id/title_qustions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تعيين كلمة مرور جديدة"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:textSize="20sp"
            >

        </TextView>
    </RelativeLayout>

   <EditText
       android:id="@+id/find_phone_number"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="14dp"
       android:layout_below="@id/myrelative"
       android:background="@drawable/input_design"
       android:hint="الرجاء أدخال رقم الهاتف"
       android:textAlignment="center"
       android:inputType="number"
       android:layout_marginTop="25dp"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       >
   </EditText>

    <Button

        android:id="@+id/virefy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:layout_below="@id/find_phone_number"
        android:background="@drawable/buttons"
        android:text="تأكيد"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
    </Button>


</RelativeLayout>