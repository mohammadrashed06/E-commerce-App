<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/purple">
       <TextView
            android:id="@+id/user_name_orders"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="أسم الزبون"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="رقم الزبون"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginRight="2dp"
            android:layout_alignParentEnd="false"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="أجمالي السعر"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/order_adress_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="العنوان ,المدينة"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_below="@+id/order_total_price"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الوقت و التاريح"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_below="@+id/order_adress_city"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold">
        </TextView>

<Button
    android:id="@+id/show_all_products_to_admin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/order_date_time"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:text="أظهار المشتريات لهاذا الزبون"
    android:textSize="15sp"
    android:textColor="#000000"
    android:background="#FFFFFF">

</Button>

    </RelativeLayout>

</RelativeLayout>